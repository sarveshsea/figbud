{
  "compilerOptions": {
    "target": "es2017",
    "module": "none",
    "lib": ["es2017"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["@figma/plugin-typings"]
  },
  "include": ["src/code-vanilla.ts"],
  "exclude": ["node_modules"]
}