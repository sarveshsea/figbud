{
  "name": "figbud",
  "version": "1.0.0",
  "description": "Source control for FigBud, an AI-powered Figma widget that provides timestamped YouTube tutorial recommendations, automated demo creation, step-by-step guidance, and collaboration tools. Built with TypeScript, React, and Node.js, integrating Figma Widget API, YouTube Data API, and OpenAI API.",
  "main": "dist/code.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src server --ext .ts,.tsx",
    "lint:fix": "eslint src server --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"server/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start:server": "node dist/server/index.js",
    "dev:server": "nodemon --exec ts-node server/index.ts",
    "build:server": "tsc && cp -r data dist/ 2>/dev/null || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarveshsea/figbud.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sarveshsea/figbud/issues"
  },
  "homepage": "https://github.com/sarveshsea/figbud#readme",
  "dependencies": {
    "@figma/plugin-typings": "^1.116.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "html-webpack-plugin": "^5.6.3",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "redis": "^5.6.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  }
}
