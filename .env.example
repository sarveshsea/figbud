# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (Choose one)
# Option 1: Supabase (Recommended)
DATABASE_TYPE=supabase
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Option 2: PostgreSQL
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://username:password@localhost:5432/figbud

# Option 3: File-based (Development only)
# DATABASE_TYPE=file

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-too
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# API Keys
OPENAI_API_KEY=your-openai-api-key
YOUTUBE_API_KEY=your-youtube-data-api-key
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Additional AI Providers
DEEPSEEK_API_KEY=your-deepseek-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Default AI Provider (smart | openai | deepseek | openrouter)
DEFAULT_AI_PROVIDER=smart

# Premium Features (Coming Soon)
# Premium subscription features will be added in a future update

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring
SENTRY_DSN=your-sentry-dsn

# CORS
FRONTEND_URL=https://figma.com
WIDGET_URL=https://figma.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100